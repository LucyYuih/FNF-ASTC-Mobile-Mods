import flixel.FlxG;
import funkin.util.MathUtil;
import funkin.play.PlayState;
import funkin.play.event.SongEvent;
import funkin.modding.module.Module;
import funkin.data.event.SongEventSchema;
class CameraBopEvent extends SongEvent {

    function new() {
        super('CameraBopEvent');
    }
    
    public override function getTitle():String {
        return 'Toggle Camera Bop';
    }

    public override function getEventSchema() {
        return [
            {
                name: 'cameraType',
                title: 'Camera',
                type: 'enum',
                defaultValue: 'both',
                keys: [
                    "HUD Camera" => 'hud',
                    "Game Camera" => 'game',
                    "Both" => 'both'
                ]
            },
            {
                name: 'enabled',
                title: 'Enabled',
                type: 'bool',
                defaultValue: 'true',
            },
            {
                name: 'interval',
                title: 'Bop Interval (Steps)',
                type: 'integer',
                defaultValue: '4',
            },
            {
                name: 'offset',
                title: 'Step Offset',
                type: 'integer',
                defaultValue: '0',
            },
            {
                name: 'intensity',
                title: 'Intensity',
                type: 'float',
                defaultValue: '0.05',
            }
        ];
    }
    
    override function handleEvent(data):Void {
    }
}